Group {
    LayoutMode: Center;

    Group #MyPanel {
        LayoutMode: Top;
        Anchor: (Width: 500, Height: 350);
        Padding: (Full: 30);
        Background: (Color: #F22A2A2E);

        Label #Title {
            Text: "Lock Chest?";
            Style: (FontSize: 28, Alignment: Center);
            Padding: (Bottom: 15);
        }

        Label #Description {
            Text: "";
            Style: (FontSize: 16, Alignment: Center);
            Padding: (Bottom: 25);
        }

        Group {
            LayoutMode: Top;
            Anchor: (Height: 140);
            Padding: (Top: 10);

            Button #LockButton {
                Anchor: (Width: 440, Height: 45);
                Padding: (Bottom: 5);
                Background: (Color: #E62E7D32);
                
                Label {
                    Text: "Lock Chest";
                    Style: (FontSize: 18, Alignment: Center);
                }
            }

            Button #PlaceSignButton {
                Anchor: (Width: 440, Height: 45);
                Padding: (Bottom: 5);
                Background: (Color: #E65A8AC4);
                
                Label {
                    Text: "Place Sign (No Lock)";
                    Style: (FontSize: 18, Alignment: Center);
                }
            }

            Button #CancelButton {
                Anchor: (Width: 440, Height: 45);
                Background: (Color: #E6C62828);
                
                Label {
                    Text: "Cancel";
                    Style: (FontSize: 18, Alignment: Center);
                }
            }
        }
    }
}
